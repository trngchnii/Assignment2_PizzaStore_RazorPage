@page
@model Assignment_02_ShoppingWebsite.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row mt-5">
    <div class="col-md-4 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Register</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Username</label>
                <div class="col-sm-9">
                    <input asp-for="Account.UserName" class="form-control" />
                    <span asp-validation-for="Account.UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Password</label>
                <div class="col-sm-9">
                    <input asp-for="Account.Password" type="password" class="form-control" />
                    <span asp-validation-for="Account.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Full Name</label>
                <div class="col-sm-9">
                    <input asp-for="Account.FullName" class="form-control" />
                    <span asp-validation-for="Account.FullName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>

            <div class="row mb-3">
                <a class="text-dark text-center" asp-page="Login">Login</a>
            </div>
        </form>
    </div>
</div>
