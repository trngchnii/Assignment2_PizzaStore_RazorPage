@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center">Delete Customer</h2>
        <h3 class ="text-center mb-5">Are you sure you want to delete this?</h3>
        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-bold">Customer ID</label>
                <div class="col-sm-8">
                    <input readonly asp-for="Customer.CustomerId" class="form-control-plaintext" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-bold">Password</label>
                <div class="col-sm-8">
                    <input asp-for="Customer.Password" class="form-control-plaintext" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-bold">Contact Name</label>
                <div class="col-sm-8">
                    <input asp-for="Customer.ContactName" class="form-control-plaintext" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-bold">Address</label>
                <div class="col-sm-8">
                    <input asp-for="Customer.Address" class="form-control-plaintext" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-bold">Phone</label>
                <div class="col-sm-8">
                    <input asp-for="Customer.Phone" class="form-control-plaintext" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-page="Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
